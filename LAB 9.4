#include <iostream> 
#include <iomanip> 
using namespace std;


int main()
{
	int iArraySize = 0;
	cout << "Please input the number of id numbers to be read \n ";
	  cin >> iArraySize;
    
	if (iArraySize < 1) 
  {
		cout << "Cannot process numbers 0 or smaller!" << endl;
		return 0;
	}
  
	int *arr = new int[iArraySize];
  
	for (int i = 0; i < iArraySize; i++) {
		cout <<      "Please enter an id number \n";
		cin >> arr[i];
	}
  
	cout << "Pleae input an id number to be searched \n";
	int iSearchID = 0;
	  cin >> iSearchID;
	bool bFound = false;
  
	for (int i = 0; i < iArraySize; i++) {
		
		if (iSearchID == arr[i]){
			bFound = true;
			break;
		}
	}
	cout << iSearchID << (bFound ? " found" : " not found") << " in array!" << endl;
	delete[] arr;

	system("pause");

	return 0;
}
