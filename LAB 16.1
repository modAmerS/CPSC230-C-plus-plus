#include <iostream>
#include <string>
using namespace std;

template <class T1>
T1 minelement(T1 first, T1 last) {		// min Template 1 
	if (first > last) {
		return last;
	}
	else
	{
		return first;
	}
}

template <class T2>
T2 maxelement(T2 first, T2 last) {		// max template 2
	if (first < last) {
		return last;
	}
	else
	{
		return first; 
	}
}

